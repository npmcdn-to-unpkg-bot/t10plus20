global-reset()

html 
	height: 100%
body
	width: 100%
	height: 100%
	font-size: 100%
	background: url('../img/dungeons-and-dragons-1.jpg') black fixed
	background-size: cover
	background-repeat: no-repeat
	color: white
	position: absolute
	font-family: 'Open Sans Condensed'

body:before {
	background: linear-gradient(to top, rgba(0,0,0,0.5) 70%, rgba(0,0,0,0.8) 100%);
    position: fixed;
    left: 0;
    width: 100%;
    height: 100%;
    content: '';
    top: 0;
    z-index: -1
}

h1 
	text-transform: uppercase
	display: flex
	align-items: center
	justify-content: center
	margin-top: 6%
	font-size: 3em
	text-indent: -9999px;

h2 
	text-transform: uppercase
	font-size: 3em

header
	//position: fixed
	color: white
	background: rgba(0, 0, 0, .3)
	overflow: hidden
	width: 100%
	
.header-box
	position: relative	
	display: flex
	flex-flow: row nowrap
	padding: 1%

.logo-container 
	width: 24% //24%
	min-height: 130px
	display: inline-block
	
	@media screen and (min-width: 31.875em)
		//width: 15%
		
	@media screen and (min-width: 78.125em)
		width: 10%

.logo 
	max-width: 100%
	min-height: 130px
	
	@media screen and (min-width: 31.875em)
		max-height: 168px

.event-info
	width: 75%
	display: inline-block

	@media screen and (min-width: 31.875em)
		width: 84%
		
	@media screen and (min-width: 78.125em)
		width: 89%

.event-info-text 
	font-size: .9em
	text-transform: uppercase
	position: absolute
	bottom: 8%
	right: 1%

.main-container, .group-info
	padding: 2%

.main-container 
	margin: 5% 0 0 0
 	display: flex
	flex-flow: row nowrap

.col-100 
	width: 100%

.col-60 
	width: 100%
	
	@media screen and (min-width: 31.875em)
		width: 60%
		
	@media screen and (min-width: 78.125em)
		width: 60%	

.group-info 
	background: rgba(213, 76, 43, .7)




